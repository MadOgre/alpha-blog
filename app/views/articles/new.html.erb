<h1>This is where you create a new article</h1>

<% if @article.errors.any? %>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @article do |f| %>
	<%= f.label :title, "Enter title here"%><br>
	<%= f.text_field :title %><br>
	<%= f.label :description, "Enter description here"%><br>
	<%= f.text_area :description %><br>
	<%= f.submit "Done" %>
<% end %>